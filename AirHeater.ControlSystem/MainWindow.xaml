<Window x:Class="AirHeater.ControlSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirHeater.ControlSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="94*"/>
            <ColumnDefinition Width="425*"/>
        </Grid.ColumnDefinitions>

        <TextBox Text="{Binding Path=Temperature, UpdateSourceTrigger=PropertyChanged}"  Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="96.4,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Temperature" Grid.Column="1" HorizontalAlignment="Left" Margin="96.4,38,0,0" VerticalAlignment="Top"/>
        <ScrollBar Grid.Column="1" HorizontalAlignment="Left" Margin="109.4,143,0,0" VerticalAlignment="Top"/>
        <TextBox Name="gainbox" Text="2" Grid.Column="1" HorizontalAlignment="Left" Height="32" Margin="61.4,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="43" TextChanged="TextBox_TextChanged"/>


    </Grid>
</Window>
